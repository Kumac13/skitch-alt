{
  "name": "skitch-alt",
  "pnpm": {
    "onlyBuiltDependencies": ["electron", "canvas"]
  },
  "version": "1.0.0",
  "description": "macOS向けスクリーンショット注釈アプリ",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": ["screenshot", "annotation", "electron", "macos"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "fabric": "^5.3.0"
  },
  "build": {
    "appId": "com.skitch-alt.app",
    "productName": "Skitch Alt",
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "!renderer/fabric.min.js.map"
    ],
    "directories": {
      "output": "dist"
    }
  }
}
